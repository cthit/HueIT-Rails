<footer>

	<div class='container'>
		<div class='row'>
			<%= link_to("Home", "/", class: 'button radius') %>
			<% if @is_locked %>
				<%= link_to("Unlock", "lock?lock_type=unlocked", class: 'button radius') %>
			<% else %>
				<%= link_to("Lock", "lock?lock_type=locked", class: 'button radius') %>
			<% end %>

			<% if flash[:lock_state_changed] %>
				<%= flash[:lock_state_changed]%>
			<% end %>

		</div>
	</div>

</footer>

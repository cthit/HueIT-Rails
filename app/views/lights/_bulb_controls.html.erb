<!-- Requires an local value of i passed when rendering the partial like:-->
<!-- render partial: 'bulb_controls', locals: {i: a number} -->

<div class="col s12 m6 valign-wrapper light-row">
  <div class="col s4 align-container">
    <div class="switch">
      <label>
          <%= check_box_tag "switch_#{light.id}", 'on/off', light.on,
              onclick:"switchOnOff(#{light.id});", name: nil %>
            <span class="lever"></span>
       </label>
     </div>
  </div>
  <div class="col s3 align-container">
    <%= content_tag :div, nil, id: "color_shower_#{light.id}", class: "bulb", data: {light_id: light.id} %>
  </div>
  <div class="col s4 align-container">
    <%= check_box_tag "lights[#{light.id}]", 'yes', false, class: 'filled-in toggl-switch' %>
    <%= label_tag "select_#{light.id}", "Select", for: "lights_#{light.id}" %>
  </div>
</div>

<div class="actions end">
  <div>
    <%= label_tag "Saturation (of color)"%>
    <div class="sat-show slider-bg range-slider">
      <%= range_field_tag :saturation, 134, in: 0..254, class: 'update clicked'%>
    </div>
  </div>
  <div>
    <%= label_tag "Hue value (of color)" %>
    <div class="hue-show slider-bg range-slider">
      <%= range_field_tag :hue, 14184, in: 0..65535, class: 'update clicked'%>
    </div>
  </div>
  <div>
    <%= label_tag "Brightness (of bulbs)"%>
    <div class="bri-show slider-bg range-slider">
      <%= range_field_tag :brightness, 254,in: 0..254, class: 'update clicked'%>
    </div>
  </div>
  <div class="right">
    <%= submit_tag "Update selected bulbs' color", class: "button submit", id: "change_btn" %>
  </div>
</div>

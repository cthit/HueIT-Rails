<main>
	<% if current_user.present? %>
		<% content_for :headJavascript do %>
  			<script>
  			function ruby_ready() {
				<% @lights.each do |light| %>
					drawLamp(<%=light.id%>, <%=light.hue%>, <%=light.sat%>, <%=light.bri%>);
				<% end %>
  			}
				function party_ready() {
					<% if Rails.application.config.is_party_on %>
						runParty();
					<% else %>
						ruinParty();
					<% end %>
				}
			</script>
		<% end %>
		<div class = "container">
			<div class="row">
				<% if @is_locked %>
					<div class='card-panel orange accent-4 center' id='lockbar'>
						<h3>hueIT is locked</h2>
					</div>
				<% end %>
				<div class="row">
					<div class="col s12 m10 l8 offset-l2 offset-m1">
						<%= render 'form' %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</main>


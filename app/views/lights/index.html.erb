<main>
	<% if current_user.present? %>
		<% content_for :headJavascript do %>
			<script>
				var lights = <%= @lights.to_json.html_safe %>
				var isPartyOn = <%= ($is_party_on || false).to_s.html_safe %>
			</script>
		<% end %>
			<% if @is_locked %>
				<div class='card-panel orange accent-4 center' id='lockbar'>
					<h3>hueIT is locked</h3>
				</div>
			<% elsif ($hue_not_found || false) %>
				<div class='callout warning'>
					<h3>Could not find Hue lights</h3><br>
					All data below is mocked for development purposes
				</div>
			<% end %>
			<div class='container'>
				<div class='content'>
					<%= render 'form' %>
				</div>
			</div>
	<% end %>
</main>

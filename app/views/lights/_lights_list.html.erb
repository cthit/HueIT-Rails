<!-- _lights_list.erb-->


<div class="col s12 m6 valign-wrapper">
	<div class="col s4 valign">
		<div class="switch">
			<label>
		    	<%=check_box_tag "switch_4", 'on/off', @lights[3].on,
		      		onclick:"switchOnOff(4,#{@lights[3].hue},#{@lights[3].sat},#{@lights[3].bri});"%>
		    	  <span class="lever"></span>
		   </label>
	   </div>
	</div>
	<div class="col s3 valign">
		<canvas onclick="setSliders(4)" id="color_shower_4" width="30" height="30">
	</div>
	<div class="col s4 valign">
		<%= check_box_tag "lights[4]", 'yes', false, class: 'filled-in'%>
		<%= label_tag "select_4", "Select", for: "lights_4"%>
	</div>
</div>

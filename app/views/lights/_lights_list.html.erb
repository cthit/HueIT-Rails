<!-- _lights_list.erb-->
<div class="row flex-container" style="padding-left: 10px; padding-right: 10px;">
  <%= label_tag "Select all", "Select all", class: "button bar-button light-blue accent-3", id: "select_all_btn" %>
  <%= label_tag "Toggle selection", "Toggle selection", class: "button bar-button light-blue accent-3", id: "toggle_all_btn" %>
  <%= label_tag "Deselect all", "Deselect all", class: "button bar-button light-blue accent-3", id: "deselect_all_btn" %>
</div>
<% [4, 7, 5, 2, 6, 3].each do |i| %>
    <%= render partial: 'bulb_controls', locals: {light: find_light(i)} %>
<% end %>
